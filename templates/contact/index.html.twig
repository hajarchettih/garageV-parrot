{% extends 'base.html.twig' %}

{% block body %}

<div class="row my-4">
    <div class="col-md-6 offset-md-3">
        <h3>Horaires</h3>
        <ul>
            {% for horaire in horaire %}
                <li>{{ horaire.days }} : {{ horaire.open }}</li>
            {% endfor %}
        </ul>
    </div>
</div>

<div class="row my-4">
    <div class="col-md-6 offset-md-3">
        <h3>Adresse</h3>
        {% for adresse in adresse %}
        <ul>
            <li>Street : {{ adresse.street }}</li>
            <li>City : {{ adresse.city }}</li>
            <li>ZipCode : {{ adresse.zipCode }}</li>
            <li>Phone Number : {{ adresse.phoneNumber }}</li>
        {% endfor %}
        </ul>
    </div>
</div>


{% block title %}Formulaire de contact{% endblock %}


    <div class="container-sm">
        <div class="row">
            <div class="col-12 mx-auto">
                <h1 class="text-center my-4">Votre demande</h1>
                {{ form_start(form, {'attr': {'id': 'form-contact'}} ) }}
                <div class="form-group my-3">
                    <p class="bold-title">Prénom:</p>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="form-group my-3">
                    <p class="bold-title">Nom:</p>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.lastName) }}
                </div>
                <div class="form-group my-3">
                    <p class="bold-title">E-mail:</p>
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.mail) }}
                </div>
                <div class="form-group my-3">
                    <p class="bold-title">Votre numéro de téléphone:
                        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}{{ form_errors(form.phoneNumber) }}
                    </p>
                </div>
                <div class="form-group my-3" id="formContent">
                    <p class="bold-title">Votre demande:</p>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'id': 'contentField'}}) }}
                    {{ form_errors(form.content) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success my-3">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}