<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Horaires</h3>
                <ul>
                    {% if horaire is defined %}
                        {% for horaire in horaire %}
                            <li>{{ horaire.days }} : {{ horaire.open }}</li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-6">
                <h3>Adresse</h3>
                <ol>
                    {% if adresse is defined %}
                        {% for adresse in adresse %}
                            <li>Street : {{ adresse.street }}</li>
                            <li>City : {{ adresse.city }}</li>
                            <li>ZipCode : {{ adresse.zipCode }}</li>
                            <li>Phone Number : {{ adresse.phoneNumber }}</li>
                        {% endfor %}
                    {% endif %}
                </ol>
            </div>
        </div>
    </div>
</footer>
