<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Horaires</h3>
                <ul>
                    {% if horaire is defined %}
                        {% for hor in horaire %}
                            <li>{{ hor.days }} : {{ hor.open }}</li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-6">
                <h3>Adresse</h3>
                <ol>
                    {% if adresse is defined %}
                        {% for adr in adresse %}
                            <li>Street : {{ adr.street }}</li>
                            <li>City : {{ adr.city }}</li>
                            <li>ZipCode : {{ adr.zipCode }}</li>
                            <li>Phone Number : {{ adr.phoneNumber }}</li>
                        {% endfor %}
                    {% endif %}
                </ol>
            </div>
        </div>
    </div>
</footer>
