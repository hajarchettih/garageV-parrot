<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Adresse</h3>
                <ol>
                    {% for adresse in adresses %}
                        <li>Street : {{ adresse.street }}</li>
                        <li>City : {{ adresse.city }}</li>
                        <li>ZipCode : {{ adresse.zipCode }}</li>
                        <li>PhoneNumber : {{ adresse.phoneNumber }}</li>
                    {% endfor %}
                </ol>
            </div>
            <div class="col-md-6">
                <h3>Horaires</h3>
                <ul>
                    {% for horaire in horaires %}
                        <li>{{ horaire.days }} : {{ horaire.open }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</footer>